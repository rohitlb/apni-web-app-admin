    div.collection-item
        div.row
            div.col.s12.m12.l9.offset-l3
                h5.center Complete Your Profile in 3 Easy steps
                ul.tabs
                    li.tab.active.col.s4
                        a.white-text.darken-5#tab1(href='#basic_detail_pharma') Basic Details
                    li.tab.col.s4
                        a.white-text.darken-5#tab22(href='#edu_special_pharma') Education & Specialization
                    li.tab.col.s4
                        a.white-text.darken-5#tab3(href='#register_doc_pharma') Registration & Documents

    div.row#basic_detail_pharma
        div.col.m12.l10.s12.offset-l2
            div.col.s12.m12.l10.offset-l2
                div.input-field.col.s12.m8.l8
                    h3 Personal Details

                div.col.s12.m4.l4
                    form(action='/health/upload', method='post', accept-charset='utf-8', enctype='multipart/form-data')
                        span Upload Your Profile Pic
                        br
                        img(src="{{url}}", alt="Profile image")
                        input(type='file', name='image')
                        input.button(type='submit' name='submit' value='UPLOAD')

        br
        br
        br
        br

        div.col.m12.l10.s12.offset-l2
            div.col.s12.m12.l10.offset-l2
                form(name='form_basic_details' id='basic_profile' enctype="multipart/form-data" method='POST')
                    div.input-field.col.s12.m4.l4
                        span
                            | Title
                            input#title(type='text' value='DRx.')
                    div.input-field.col.s12.m8.l8
                        span
                            | Name
                            input#name(type="text" value=data[0].name)

                    div.col.s12.m4.l4
                        br
                        span Gender:
                            br
                            div#gender
                                if((data[0].gender == null) || (data[0].gender == "male"))
                                    input.with-gap#g1(name="gender" type="radio" value="male" checked)
                                    label(for='g1') Male&nbsp
                                    input.with-gap#g2(name="gender" type="radio" value='female')
                                    label(for='g2') Female&nbsp
                                    input.with-gap#g3(name="gender" type="radio" value="other" )
                                    label(for="g3") Other
                                if(data[0].gender == "female")
                                    input.with-gap#g1(name="gender" type="radio" value="male" )
                                    label(for='g1') Male&nbsp
                                    input.with-gap#g2(name="gender" type="radio" value='female' checked)
                                    label(for='g2') Female&nbsp
                                    input.with-gap#g3(name="gender" type="radio" value="other" )
                                    label(for="g3") Other
                                if(data[0].gender == "other")
                                    input.with-gap#g1(name="gender" type="radio" value="male" )
                                    label(for='g1') Male&nbsp
                                    input.with-gap#g2(name="gender" type="radio" value='female')
                                    label(for='g2') Female&nbsp
                                    input.with-gap#g3(name="gender" type="radio" value="other" checked)
                                    label(for="g3") Other
                                br
                                br
                    div.input-field.col.s12.m4.l4
                        span
                            | City
                            input#city(type='text' value=data[0].city)
                    div.input-field.col.s12.m4.l4
                        span
                            | Years of Experience
                            input#year_of_experience(type='number' placeholder='years' value=data[0].year_of_experience required)
                    div.col.s12.m12.l12
                        span
                            | About You
                            textarea.materialize-textarea#about_you(placeholder="about you"  required) #{data[0].About_you}
                            label(for='about_you')
                    br
                    div.row
                        div.col.s12.m12.l12
                            h3 Contact Details
                            div.row
                                div.input-field.col.s12.m6.l6
                                    span
                                        | Mobile Number &nbsp
                                        span#f1(style='color:#660099;') Verified
                                            i.material-icons.left(style='color:#660099;') done
                                        input.grey.lighten-2#mobNo(type='text', value=data[0].number readonly)
                            div.row
                                div.input-field.col.s12.m6.l6
                                    span
                                        | Email ID  &nbsp
                                        span#f2(style='color:#660099;')
                                            i.material-icons.left(style='color:#660099;') close
                                        input#email(type='email', value=data[0].email)
                    div.row
                        div.col.s6.m4.l3.offset-l3.offset-m2
                            input.reset(type='reset')
                        div.col.s6.m4.l3
                            input.button#basic_details_pharma(type='submit' value='Submit' href='#edu_special')


    div#edu_special_pharma
        div.row
            div.col.s12.m12.l9.offset-l3
                form(name='form_education_specialization' method='POST' action='#')
                    h3 Education & Specialization Details
                    div.input-field.col.s12.m6.l6
                        span
                            | Qualification
                            input#qualification(type='text', value=data[0].qualification required)
                    div.input-field.col.s12.m6.l6
                        span
                            | College Name
                            input#college(type='text', value=data[0].college required)
                    div.input-field.col.s12.m6.l6
                        span
                            | Completion Year
                            input#completion_year(type='text' placeholder='yyyy eg. 1962' , value=data[0].completion_year required)
                    div.input-field.col.s12.m6.l6
                        span
                            | Specialization
                            input#specialization(type='text' value=data[0].specialization)

                    div.col.s6.m4.l3.offset-l4.offset-m2
                        input.reset(type='reset')
                    div.col.s6.m4.l3
                        input.button#education_pharma(type='submit' value='Submit' href='#register_doc')



    div#register_doc_pharma
        div.row
            div.col.s12.m12.l9.offset-l3
                form.upload_image1_pharma(action="#" , method='post' , enctype='multipart/form-data')
                    h3 Registration Details
                    div.input-field.col.s12.m4.l4
                        span
                            | Council Reg. No.
                            input#council_reg_no(type='text' value=data[0].council_registration_number)
                    div.input-field.col.s12.m4.l4
                        span
                            | Council Name
                            input#council_name(type='text' value=data[0].council_name)
                    div.input-field.col.s12.m4.l4
                        span
                            | Council Year
                            input#council_year(type='number' placeholder='yyyy eg.1920' value=data[0].council_registration_year)
                    div.col.s6.m4.l3.offset-l3.offset-m2
                        input.reset(type='reset')
                    div.col.s6.m4.l3
                        input.button#docs(type='submit' value='Submit' href='/health_care_provider?page=home')

                form.upload_image2(action="#" , method='post' , enctype='multipart/form-data')
                    div.col.s12.m12.l12
                        h3 Documents/Certificates
                        br
                        div.row
                            h5.flow-text Please Upload your Documents

                            li Aadhar Card/Driving Licence/Voter ID
                            br
                            div.col.s12.m12.l12
                                div.file-field.input-field
                                    div.btn.waves-effect.waves-light
                                        span Browse
                                        input#image1(type="file", name='myimage')
                                    div.file-path-wrapper
                                        div.col.s12.m6.l6
                                            input.file-path.validate(type="text")
                                        div.col.s12.m6.l6
                                            img(src="" alt="Document image")

                            br
                            br
                            br
                            li Medical Council Certificates
                            br
                            div.col.s12.m12.l12
                                div.file-field.input-field
                                    div.btn.waves-effect.waves-light
                                        span Browse
                                        input#image2(type="file", name='myimage')
                                    div.file-path-wrapper
                                        div.col.s12.m6.l6
                                            input.file-path.validate(type="text")
                                        div.col.s12.m6.l6
                                            img(src="http://localhost:4000/images/"+profile_image alt="Certificate image")


                    div.col.s6.m4.l3.offset-l3.offset-m2
                        input.reset(type='reset')
                    div.col.s6.m4.l3
                        input.button#certificate(type='submit' value='Submit' href='/health/health_care_provider?page=home')
